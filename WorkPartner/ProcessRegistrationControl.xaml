<UserControl x:Class="WorkPartner.ProcessRegistrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <GroupBox Header="{Binding Title}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="5">
                <TextBlock Text="프로그램 실행 파일 이름 또는 웹사이트 주소 키워드를 입력하세요." TextWrapping="Wrap" FontSize="11" Foreground="Gray"/>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ProcessInputTextBox" Grid.Column="0" Tag="{Binding ProcessListType}"
                             TextChanged="AutoComplete_TextChanged" PreviewKeyDown="AutoComplete_PreviewKeyDown"/>

                    <Popup x:Name="AutoCompletePopup" PlacementTarget="{Binding ElementName=ProcessInputTextBox}" StaysOpen="False"
                           Width="{Binding ActualWidth, ElementName=ProcessInputTextBox}">
                        <ListBox x:Name="SuggestionListBox" MaxHeight="200" SelectionChanged="SuggestionListBox_SelectionChanged" Tag="{Binding ProcessListType}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding DisplayName}"/>
                                        <TextBlock Text="{Binding ProcessName, StringFormat=' ({0})'}" Foreground="Gray" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Popup>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                        <Button Content="추가" Click="AddProcessButton_Click" Margin="0,0,5,0"/>
                        <Button Content="현재 탭" ToolTip="3초 뒤 활성화된 브라우저 탭의 주소를 추가합니다." Click="AddActiveTabButton_Click" Margin="0,0,5,0"/>
                        <Button Content="실행 중" ToolTip="현재 실행 중인 프로그램 목록에서 선택합니다." Click="SelectRunningAppButton_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <ListBox x:Name="ProcessListBox" Grid.Row="1" Margin="5" ItemsSource="{Binding Processes}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="삭제" Tag="{Binding}" Click="DeleteProcessButton_Click" 
                                    Background="Transparent" BorderThickness="0" Foreground="Crimson" Cursor="Hand"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </GroupBox>
</UserControl>

