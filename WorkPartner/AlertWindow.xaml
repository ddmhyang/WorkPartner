<Window x:Class="WorkPartner.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert" Height="180" Width="350"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="MessageText" Text="Message goes here." TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <!-- 확인 버튼 (기본) -->
            <Button Name="OkButton" Content="확인" Click="OkButton_Click" Width="80" Margin="5" IsDefault="True"/>
            <!-- 예/아니오 버튼 (선택적 표시) -->
            <Button Name="YesButton" Content="예" Click="YesButton_Click" Width="80" Margin="5" Visibility="Collapsed" IsDefault="True"/>
            <Button Name="NoButton" Content="아니오" Click="NoButton_Click" Width="80" Margin="5" Visibility="Collapsed" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
