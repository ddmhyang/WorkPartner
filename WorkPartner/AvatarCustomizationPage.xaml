<Page x:Class="WorkPartner.AvatarCustomizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkPartner"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="아바타 꾸미기" Loaded="Page_Loaded">
    <Page.Resources>
        <!-- 아이템 미보유 시 회색 레이어를 표시하기 위한 컨버터 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="Button" x:Key="CategoryButtonStyle">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <DataTemplate x:Key="ShopItemTemplate">
            <Grid Margin="5" Width="100" Height="120" >
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#F0F0F0">
                    <StackPanel>
                        <Image Source="{Binding ImagePath}" Width="80" Height="80" Margin="5"/>
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/images/coin.png" Width="12" Height="12"/>
                            <TextBlock Text="{Binding Price}" FontSize="12" Margin="3,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- 미보유 아이템에 대한 회색 오버레이 -->
                <Border Background="#80808080" CornerRadius="5" Visibility="{Binding IsOwned, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
                <!-- 장착된 아이템 표시 -->
                <Border BorderBrush="Gold" BorderThickness="3" CornerRadius="5" Visibility="{Binding IsEquipped, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Section 1: 현재 아바타 정보 -->
        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="10" Padding="15">
            <StackPanel>
                <TextBlock Text="현재 아바타" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="닉네임: " FontWeight="SemiBold"/>
                    <TextBlock Name="NicknameText" Text="플레이어"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="보유 골드: " FontWeight="SemiBold"/>
                    <Image Source="/images/coin.png" Width="16" Height="16" Margin="5,0"/>
                    <TextBlock Name="MoneyText" Text="1000"/>
                </StackPanel>

                <local:CharacterDisplay x:Name="CharacterPreview" Height="300"/>

                <Button Content="옷 색상 변경" Click="ChangeColor_Click" Margin="0,20,0,5"/>
                <Button Content="저장하고 나가기" Click="SaveChanges_Click" Margin="0,5,0,5" Background="#4CAF50" Foreground="White"/>
                <Button Content="저장하지 않고 나가기" Click="Exit_Click" Margin="0,5,0,0" Background="#F44336" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Section 2 & 3: 옷장 -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 카테고리 버튼 -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="얼굴" Click="CategoryButton_Click" Tag="Face" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="헤어" Click="CategoryButton_Click" Tag="Hair" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="상의" Click="CategoryButton_Click" Tag="Top" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="하의" Click="CategoryButton_Click" Tag="Bottom" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="신발" Click="CategoryButton_Click" Tag="Shoes" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="장식" Click="CategoryButton_Click" Tag="Accessory" Style="{StaticResource CategoryButtonStyle}"/>
                        <Button Content="배경" Click="CategoryButton_Click" Tag="Background" Style="{StaticResource CategoryButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>


                <!-- 아이템 목록 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                    <ItemsControl Name="ItemsContainer">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="Item_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Padding="0">
                                    <Grid Margin="5" Width="110" Height="130" >
                                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#F9F9F9">
                                            <StackPanel>
                                                <Image Source="{Binding ImagePath}" Width="90" Height="90" Margin="5"/>
                                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Image Source="/images/coin.png" Width="12" Height="12"/>
                                                    <TextBlock Text="{Binding Price}" FontSize="12" Margin="3,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                        <Border Name="UnownedOverlay" Background="#99808080" CornerRadius="5" Visibility="Collapsed"/>
                                        <Border Name="EquippedHighlight" BorderBrush="Gold" BorderThickness="3" CornerRadius="5" Visibility="Collapsed"/>
                                    </Grid>
                                </Button>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsOwned}" Value="False">
                                        <Setter TargetName="UnownedOverlay" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsEquipped}" Value="True">
                                        <Setter TargetName="EquippedHighlight" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
