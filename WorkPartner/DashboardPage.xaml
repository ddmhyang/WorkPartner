<Page x:Class="WorkPartner.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkPartner"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="DashboardPage" Loaded="Page_Loaded">

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- To-Do List -->
        <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="8" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="To-Do List" FontWeight="Bold" FontSize="16" Margin="15"/>
                <ListView Name="TodoListView" Grid.Row="1" Margin="10,0,10,10" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center" Margin="0,0,10,0" Checked="TodoCheckBox_Changed" Unchecked="TodoCheckBox_Changed"/>
                                <TextBlock Text="{Binding Task}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
                    <TextBox Name="TodoInput" Width="200" Margin="0,0,5,0"/>
                    <Button Content="추가" Click="AddTodo_Click" Width="50"/>
                    <Button Content="삭제" Click="DeleteTodo_Click" Width="50" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Timer -->
        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="8" Margin="10">
            <StackPanel Margin="15">
                <TextBlock Text="타이머" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Name="TimerTextBlock" Text="25:00" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="시작" Name="StartButton" Click="StartButton_Click" Width="80" Margin="5"/>
                    <Button Content="정지" Name="StopButton" Click="StopButton_Click" Width="80" Margin="5"/>
                    <Button Content="리셋" Name="ResetButton" Click="ResetButton_Click" Width="80" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Log -->
        <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="8" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="오늘의 활동 로그" FontWeight="Bold" FontSize="16" Margin="15"/>
                <ListView Name="LogListView" Grid.Row="1" Margin="10,0,10,10" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Memo -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="8" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="메모" FontWeight="Bold" FontSize="16" Margin="15"/>
                <TextBox Name="MemoTextBox" Grid.Row="1" Margin="10,0,10,10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" LostFocus="MemoTextBox_LostFocus"/>
            </Grid>
        </Border>

        <!-- Character & White Noise Section -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="10,10,10,10">
            <!-- Character Info Panel -->
            <Border Background="White" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="내 캐릭터" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="닉네임:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Name="NicknameText" Grid.Row="0" Grid.Column="1" Text="플레이어" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="레벨:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Name="LevelText" Grid.Row="1" Grid.Column="1" Text="1 (0/100)" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="작업:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Name="CurrentTaskText" Grid.Row="2" Grid.Column="1" Text="휴식 중" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="골드:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <Image Source="/images/coin.png" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Name="MoneyText" Text="1000" />
                        </StackPanel>

                        <local:CharacterDisplay x:Name="CharacterDisplay" Grid.Row="4" Grid.ColumnSpan="2" Height="150" Margin="0,10"/>

                        <Button Name="CustomizeAvatarButton" Grid.Row="5" Grid.ColumnSpan="2" Content="아바타 꾸미기" Click="CustomizeAvatarButton_Click" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- White Noise Panel -->
            <Border Background="White" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="백색 소음" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="파도 소리" Margin="0,5,0,2"/>
                    <Slider Name="WaveSlider" Minimum="0" Maximum="1" Value="0" ValueChanged="Slider_ValueChanged" TickFrequency="0.1" IsSnapToTickEnabled="True"/>

                    <TextBlock Text="숲 소리" Margin="0,5,0,2"/>
                    <Slider Name="ForestSlider" Minimum="0" Maximum="1" Value="0" ValueChanged="Slider_ValueChanged" TickFrequency="0.1" IsSnapToTickEnabled="True"/>

                    <TextBlock Text="비 소리" Margin="0,5,0,2"/>
                    <Slider Name="RainSlider" Minimum="0" Maximum="1" Value="0" ValueChanged="Slider_ValueChanged" TickFrequency="0.1" IsSnapToTickEnabled="True"/>

                    <TextBlock Text="모닥불 소리" Margin="0,5,0,2"/>
                    <Slider Name="CampfireSlider" Minimum="0" Maximum="1" Value="0" ValueChanged="Slider_ValueChanged" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

