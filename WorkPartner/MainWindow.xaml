<Window x:Class="WorkPartner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkPartner"
        mc:Ignorable="d"
        Title="WorkPartner" Height="650" Width="950" MinHeight="600" MinWidth="900"
        Loaded="MainWindow_Loaded" Closing="MainWindow_Closing"
        WindowStartupLocation="CenterScreen"
        Icon="app_icon.ico">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#F5F5F5" Padding="10">
            <StackPanel x:Name="NavigationPanel">
                <TextBlock Text="WorkPartner" FontSize="20" FontWeight="Bold" Margin="10,5,10,20"/>
                <Button x:Name="DashboardButton" Content="대시보드" Click="DashboardButton_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button x:Name="AnalysisButton" Content="분석" Click="AnalysisButton_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button x:Name="AvatarButton" Content="아바타 꾸미기" Click="AvatarButton_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button x:Name="SettingsButton" Content="설정" Click="SettingsButton_Click" Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Page Content -->
        <ContentControl x:Name="PageContent" Grid.Column="1"/>
    </Grid>
</Window>

