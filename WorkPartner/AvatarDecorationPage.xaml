<UserControl x:Class="WorkPartner.AvatarDecorationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White"
             IsVisibleChanged="UserControl_IsVisibleChanged">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style TargetType="Button" x:Key="ItemButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1구역: 현재 아바타 및 정보 -->
        <Border Grid.Column="0" BorderBrush="Gainsboro" BorderThickness="0,0,1,0" Padding="15">
            <StackPanel>
                <TextBlock Text="내 아바타" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- 닉네임 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="닉네임: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="NicknameTextBlock" Text="WorkPartner"/>
                </StackPanel>

                <!-- 보유 코인 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="코인: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="CoinTextBlock" Text="1,000"/>
                </StackPanel>

                <!-- 캐릭터 미리보기 -->
                <Border Background="#F5F5F5" CornerRadius="10" Height="250" VerticalAlignment="Top">
                    <local:CharacterDisplay x:Name="AvatarPreviewControl" />
                </Border>
            </StackPanel>
        </Border>

        <!-- 2 & 3 구역: 꾸미기 및 옷장 -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 2구역: 색깔 꾸미기 -->
            <GroupBox Header="색깔 꾸미기" Grid.Row="0" Margin="5,0,5,10" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="옷 색상: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <xctk:ColorPicker x:Name="MyColorPicker" 
                                      Width="150"
                                      DisplayColorAndName="True" 
                                      SelectedColorChanged="MyColorPicker_SelectedColorChanged"/>
                </StackPanel>
            </GroupBox>

            <!-- 3구역: 옷장 -->
            <GroupBox Header="옷장" Grid.Row="1" Margin="5" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 카테고리 -->
                    <ListBox x:Name="CategoryListBox" Grid.Column="0" SelectionChanged="CategoryListBox_SelectionChanged" BorderThickness="0,0,1,0" BorderBrush="Gainsboro" Margin="0,0,5,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- 아이템 목록 -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ItemsListView" ItemsSource="{Binding FilteredShopInventory}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ItemButtonStyle}" DataContext="{Binding}" Click="ItemButton_Click">
                                        <Grid Width="90" Height="90">
                                            <Image Source="{Binding ImagePath}" Stretch="Uniform"/>

                                            <!-- 보유하지 않은 아이템 오버레이 -->
                                            <Border Background="#4C808080" CornerRadius="5" Visibility="{Binding IsOwned, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
                                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Margin="4">
                                                    <Image Source="Images/coin.png" Width="12" Height="12" Margin="0,0,2,0"/>
                                                    <TextBlock Text="{Binding Price}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 장착된 아이템 표시 -->
                                            <Border BorderBrush="Gold" BorderThickness="3" CornerRadius="5" Visibility="{Binding IsEquipped, Converter={StaticResource BoolToVisibility}}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>

